class Coche:
    def __init__(self, marca:str, velocidad=0):
        self.__marca = marca
        self.__velocidad = velocidad
#self se refiere a la instancia actual

    def acelerar(self, incremento):
        self.__velocidad += incremento 

    def frenar(self, decremento):
        self.__velocidad -= decremento
    def mostrar_datos(self):
        print(f"Marca:{self.__marca}, velocidad: {self.__velocidad} km/h")
        

mi_coche= Coche("Toyota")#para acceder a los datos creamos un objeto mi_coche de la clase Coche
mi_coche.mostrar_datos()

mi_coche.acelerar(50)
mi_coche.mostrar_datos()
